---
import ActionButton from "@/components/action-button/index.astro";
import type { Props } from "./props";
import { cn } from "@/lib/utils";

const {
  title,
  description,
  actionButton,
  actionButtonLink,
  showGradient = true,
} = Astro.props;
---

<div
  class="p-8 rounded-xl border border-[rgba(255,255,255,0.10)] bg-[rgba(40,40,40,0.30)] shadow-[2px_4px_16px_0px_rgba(248,248,248,0.06)_inset]"
>
  <div
    class={cn(
      "h-[6rem] md:h-[8rem] rounded-xl z-40",
      showGradient &&
        " bg-[rgba(40,40,40,0.30)] [mask-image:radial-gradient(50%_50%_at_50%_50%,white_0%,transparent_100%)]"
    )}
  >
    <div class="h-16 w-16 md:h-20 md:w-20 bg-neutral-400 rounded-full"></div>
  </div>
  <h3 class="text-lg font-semibold text-white py-2">
    {title}
  </h3>
  {
    description && (
      <p class="text-sm text-pretty font-normal text-neutral-400 max-w-sm">{description}</p>
    )
  }
  <div class="mt-4">
    {
      actionButton && actionButtonLink && (
        <ActionButton title={actionButton} link={actionButtonLink} />
      )
    }
  </div>
</div>
