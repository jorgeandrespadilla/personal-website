---
import Footer from "@/sections/Footer.astro";
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="relative hero z-10">
    <div
      class="mx-auto min-h-screen max-w-screen-2xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0"
    >
      <nav
        class="flex items-center justify-between w-full max-w-screen-2xl mx-auto px-6 py-4"
      >
        <a
          href="/"
          class="text-lg leading-8 lg:text-xl lg:leading-10 block font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-400 bg-opacity-50"
        >
          <h1>Jorge Andr√©s Padilla</h1>
        </a>
      </nav>
      <div class="max-w-screen-md mx-auto px-6 py-4 pb-20">
        <slot />
      </div>
    </div>
  </div>
  <Footer />
</Layout>
