---
import Component from "../components/Component.astro";
import ActionButton from "@/components/action-button/index.astro";
import Milestone from "../components/milestone/index.astro";
import Card from "../components/card/index.astro";

import { EXPERIENCE } from "../data/experience";
import { SOCIALS } from "../data/socials";
import { HIGHLIGHTS } from "../data/highlights";

import Layout from "../layouts/Layout.astro";
import Footer from "../sections/Footer.astro";
---

<Layout title="Jorge AndrÃ©s Padilla">
    <div class="relative hero z-10">
    <div
      class="mx-auto min-h-screen max-w-screen-2xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0"
    >
      <div class="lg:flex lg:justify-between lg:gap-4">
        <header
          class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
        >
          <div
            class="flex lg:items-start gap-4 flex-col lg:flex-row items-center text-center lg:text-left"
          >
            <img
              src="/avatar.webp"
              alt="Jorge AndrÃ©s Padilla"
              class="w-20 h-20"
            />
            <div>
              <a
                href="/"
                class="text-3xl leading-10 lg:text-4xl lg:leading-12 block font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-400 bg-opacity-50"
              >
                <h1>Jorge AndrÃ©s Padilla</h1>
              </a>
              <h2 class="mt-2 text-sm lg:text-lg font-medium text-neutral-400">
                Software Engineer
              </h2>

              <a
                data-ccursor
                href="mailto:jorgeandres.padillasalgado@gmail.com"
                class="inline-flex transition-all border-neutral-700 hover:border-opacity-0 border-opacity-50 shadow rounded-md border backdrop-blur-xl bg-neutral-400/10 px-4 py-2 items-center text-white font-semibold group p-2 text-sm gap-x-2 mt-4"
              >
                <span>Contact Me</span>
                <sapn
                  class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
                >
                </sapn>
              </a>
            </div>
          </div>

          {
            SOCIALS.length && (
              <ul
                class="mt-8 flex items-center justify-center lg:justify-normal gap-x-5"
                aria-label="Social media"
              >
                {SOCIALS.map((social) => (
                  <li class="text-xs p-2 rounded" data-ccursor>
                    <a
                      class="block hover:text-slate-200"
                      href={social.url}
                      target="_blank"
                      rel="noreferrer noopener"
                      aria-label={`${social.name} (opens in a new tab)`}
                    >
                      <span class="sr-only">{social.name}</span>
                      {<Component component={social.icon} />}
                    </a>
                  </li>
                ))}
              </ul>
            )
          }
        </header>

        <main id="content" class="pt-24 lg:w-1/2 lg:py-24">
          <section
            id="about"
            class="mb-16 scroll-mt-16 md:mb-24 lg:scroll-mt-24"
            aria-label="About me"
          >
            <div
              class="sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200 lg:sr-only"
              >
                About
              </h2>
            </div>
            <div>
              <div class="font-normal mb-4 space-y-4 text-balance">
                <p>
                  I'm a 
                  <span class="font-bold">
                    Software Engineer
                  </span> 
                  from Ecuador with a passion for building products that make a difference. I have a strong background in Full Stack Web Development and Artificial Intelligence, currently focusing on the exciting field of Generative AI to create innovative solutions. ðŸš€
                </p>
                <p>
                </p>
              </div>
            </div>
          </section>

          <section
            id="experience"
            class="mb-16 scroll-mt-16 md:mb-24 lg:scroll-mt-24"
            aria-label="Work experience"
          >
            <div
              class="sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200"
              >
                Experience
              </h2>
            </div>
            <div>
              <ol class="group/list space-y-12">
                {EXPERIENCE.map((experience) => <Milestone {...experience} />)}
              </ol>

              <div class="mt-12">
                <ActionButton title="View Resume" link="/resume" newTab />
              </div>
            </div>
          </section>

          <section
            id="highlights"
            class="mb-4 scroll-mt-16 lg:mb-0 lg:scroll-mt-24"
            aria-label="Highlights"
          >
            <div class="sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0">
              <h2 class="text-sm font-bold uppercase tracking-widest text-neutral-200">Highlights</h2>
            </div>
            <div>
              <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-6">
                {HIGHLIGHTS.map((highlight) => <Card {...highlight} />)}
              </div>
            </div>
          </section>
        </main>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

<style scoped>
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .hero {
    background-image: url(/pattern.svg);
    background-position: top center;
    background-repeat: no-repeat;
    overflow-y: visible;
    overflow-x: clip;
  }

  .hero {
    animation: fadeIn 1s;
  }
</style>
